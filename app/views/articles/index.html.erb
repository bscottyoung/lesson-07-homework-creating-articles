<h1><u>Articles Index</u></h1>

<p style="font-size:150%; text-align:right"><%=link_to 'Create new article', new_article_path  %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>

<table>
	<tr>
		<th>Title</th>
		<th></th>
		<th>Author</th>
		<th>Year Published</th>
		<th>Description Snippet</th>
	</tr>

	<% @articles.each do |article| %> 
	<tr>
		<td><%= link_to(article.title, article_path(article)) %></td>
		<td></td>
		<td><%= "#{article.author_last_name}, #{article.author_first_name}" %> 	</td>
		<td align='center'><%= article.article_year %> </td>
		<td style:'padding:5px 5px 5px 20px'><%= article.body.tr('[]/\",','').slice(0..40) %> ... </td>
	</tr>
	<%end%>
</table>
